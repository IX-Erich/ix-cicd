{
  "name": "Jekyll Static Site",
  "description": "Configuration for Jekyll-based static sites",
  "preset": "jekyll",
  "config": {
    "spa_mode": false,
    "build_command": "bundle exec jekyll build",
    "build_dir": "_site",
    "index_document": "index.html",
    "error_document": "404.html",
    "exclude_patterns": [
      "_site/*",
      ".jekyll-cache/*",
      "node_modules/*",
      "Gemfile*",
      "_config.yml",
      "*.md",
      "_*/"
    ],
    "github_workflow": {
      "build_steps": [
        {
          "name": "Setup Ruby",
          "uses": "ruby/setup-ruby@v1",
          "with": {
            "ruby-version": "3.0",
            "bundler-cache": true
          }
        },
        {
          "name": "Build Jekyll site",
          "run": "bundle exec jekyll build"
        }
      ]
    }
  }
}